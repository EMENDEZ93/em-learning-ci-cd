FROM node:14 AS build

RUN apt-get update && apt-get install -y git
WORKDIR /em-learning-frontend

RUN git clone -b feature/estable-enero https://github.com/EMENDEZ93/em-learning-frontend.git .

RUN npm install
RUN npm run build --prod

FROM nginx

COPY --from=build /em-learning-frontend/public /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
